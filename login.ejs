    const form = $("#form_login").validate({
        rules: {
            user_name: {required: true},
            password: {required: true},
        },
        messages: {
            user_name: {required: 'err'},
            password: {required: 'err'},
        },
        submitHandler: function(form) {
            
        }
    });

</script>
</html>
